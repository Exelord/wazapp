{
  "compilerOptions": {
    "target": "ES2019",
    "declaration": true,
    "declarationMap": true,
    
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,

    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["packages/*"]
    },

    "strict": true,
    "skipLibCheck": true,
    "checkJs": false,
    "allowJs": true,
    "removeComments": true,
    
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "jsx": "react",
  },
  "exclude": [
    "node_modules",
    "scripts",
    "examples",
    "packages/**/dist",
    "dist"
  ]
}